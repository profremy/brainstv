<div class="jumbotron container-fluid">
    <a href="/brainstvadmins" class="btn btn-info marginTopBottomSmall"><i class="fa fa-arrow-circle-left"
            aria-hidden="true"></i><span>Back</span></a>

    <hr class="my-1 document-divider" />
    <nav class="navbar navbar-light bg-info">
        <a class="navbar-brand">Search Discussion By Message</a>
        <form action="/brainstvadmins/discussions" method="GET" class="form-inline my-2 my-lg-0 searchForm">
            <input type="search" class="form-control mr-sm-2" name="message" value="<%= searchOptions.message %>"
                placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 searchBtn" type="submit" id="loader">Search</button>
        </form>
    </nav>
    <hr class="my-1" />
    <% if (message != null) { %>
    <p>Listing a total of <strong><%= message.length %></strong> discussions</p>
    <% } %>

    <div class="table-responsive-sm">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Message</th>
                    <th scope="col">ClubMember</th>
                    <!-- <th scope="col">Show</th> -->
                    <th scope="col">Date</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                <% message.forEach(discussion => { %>
                <tr>
                    <td style="width: 40%;"><%= discussion.message %></td>
                    <td><%= discussion.name %> </td>
                    <!-- <td><%#= discussion.show.showTitle %></td> -->
                    <td><%= discussion.createdAt.toISOString().split('T')[0] %></td>
                    <td>
                        <!-- this is ejs rendering of delete form button in partials folder -->
                        <%- include('../../partials/deleteForm', { url: `/brainstvadmins/discussions/${discussion.id}` }) %>
                    </td>
                </tr>
                <% }) %>

            </tbody>
        </table>
    </div>

</div>