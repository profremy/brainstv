<div class="jumbotron container-fluid">
    <a href="/brainstvadmins" class="btn btn-info marginTopBottomSmall"><i class="fa fa-arrow-circle-left"
            aria-hidden="true"></i><span>Back</span></a>
    <h4>Shows</h4>
    <a href="/brainstvadmins/shows/new" class="btn btn-sm btn-success">Create/Add New</a>

    <span class="role"><button type="button" class="btn btn-sm btn-warning" data-toggle="popover" data-trigger="focus"
            title="Add New Show"
            data-content="You may create new show, edit and delete existing ones. Note: A lone show cannot be deleted"><i
                class="fa fa-question-circle-o" aria-hidden="true"></i></button></span>

    <hr class="my-1 document-divider" />
    <nav class="navbar navbar-light bg-info">
        <a class="navbar-brand">Search Shows By Title</a>
        <form action="/brainstvadmins/shows" method="GET" class="form-inline my-2 my-lg-0 searchForm">
            <input type="search" class="form-control mr-sm-2" name="showTitle" value="<%= searchOptions.showTitle %>"
                placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 searchBtn" type="submit" id="loader">Search</button>
        </form>
    </nav>
    <hr class="my-1" />
    <% if (show != null) { %>
    <p>Listing a total of <strong><%= show.length %></strong> Shows</p>
    <% } %>

    <div class="table-responsive-sm">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Show Title</th>
                    <th scope="col">Show Type</th>
                    <th scope="col">Date Posted</th>
                    <th scope="col">Class Name</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                <% show.forEach(ytShow => { %>
                <tr>
                    <th scope="row"><a href="/brainstvadmins/shows/<%= ytShow.id %>/edit" class="text-success"
                            title="Edit Faqs"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </th>
                    <td><%= ytShow.showTitle %></td>
                    <td><%= ytShow.showType %></td>
                    <td><%= ytShow.datePosted.toISOString().split('T')[0] %></td>
                    <td><%= ytShow.className.className %></td>
                    <td>
                        <!-- this is ejs rendering of delete form button in partials folder -->
                        <%- include('../../partials/deleteForm', { url: `/brainstvadmins/shows/${ytShow.id}` }) %>
                    </td>
                </tr>
                <% }) %>

            </tbody>
        </table>
    </div>

</div>