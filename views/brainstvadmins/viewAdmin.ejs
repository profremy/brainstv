<div class="jumbotron container-fluid">
    <a href="/brainstvadmins" class="btn btn-info marginTopBottomSmall"><i class="fa fa-arrow-circle-left"
            aria-hidden="true"></i><span>Back</span></a>

    <h4>Admin Users</h4>
    <a href="/brainstvadmins/new" class="btn btn-success">Create/Add New</a>
    <hr class="my-1 document-divider">

    <nav class="navbar navbar-light bg-info">
        <a class="navbar-brand">Search First Name</a>
        <form action="/brainstvadmins/viewAdmin" method="GET" class="form-inline my-2 my-lg-0 searchForm">
            <input class="form-control mr-sm-2" type="search" name="firstname" value="<%= searchOptions.firstname %>"
                placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 searchBtn" type="submit" id="loader">Search</button>

        </form>
    </nav>
    <div class="table-responsive-sm">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Admin Role</th>
                    <th scope="col"><span class="role"><button type="button" class="btn btn-sm btn-warning"
                                data-toggle="popover" data-trigger="focus" title="Super Admin"
                                data-content="Do not lock yourself out. You must have at least one Super Admin Role. To delete another super admin user, first edit and downgrade to basicAdmin and then delete."><i
                                    class="fa fa-question-circle-o" aria-hidden="true"></i></button></span></th>
                </tr>
            </thead>
            <tbody>
                <% clubmembers.forEach(clubmember => { %>
                <% if(clubmember.role == 'superAdmin' || clubmember.role == 'basicAdmin') { %>
                <tr>
                    <th scope="row">
                        <a href="/brainstvadmins/<%= clubmember.id %>/edit" class="viewProfileData text-success"
                            title="Edit Member"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </th>
                    <td><%= clubmember.firstname %></td>
                    <td><%= clubmember.email %></td>
                    <td><%= clubmember.role %></td>
                    <td>
                        <!-- this is ejs rendering of delete form button in partials folder -->
                        <%- include('../partials/deleteForm', { url: `/brainstvadmins/${clubmember.id}` }) %>

                    </td>
                </tr>
                <% } %>
                <% }) %>
            </tbody>
        </table>
    </div>

</div>