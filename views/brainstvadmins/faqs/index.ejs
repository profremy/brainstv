<div class="jumbotron container-fluid">
    <a href="/brainstvadmins" class="btn btn-info marginTopBottomSmall"><i class="fa fa-arrow-circle-left"
            aria-hidden="true"></i><span>Back</span></a>
    <h4>FAQs</h4>
    <a href="/brainstvadmins/faqs/new" class="btn btn-sm btn-success">Create/Add New</a>

    <span class="role"><button type="button" class="btn btn-sm btn-warning" data-toggle="popover" data-trigger="focus"
            title="Class Names"
            data-content="You may create new questions and answers, edit and delete existing ones."><i
                class="fa fa-question-circle-o" aria-hidden="true"></i></button></span>

    <hr class="my-1 document-divider" />
    <nav class="navbar navbar-light bg-info">
        <a class="navbar-brand">Search Question</a>
        <form action="/brainstvadmins/faqs" method="GET" class="form-inline my-2 my-lg-0 searchForm">
            <input type="search" class="form-control mr-sm-2" name="question" value="<%= searchOptions.question %>"
                placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 searchBtn" type="submit" id="loader">Search</button>
        </form>
    </nav>
    <hr class="my-1" />
    <% if (faq != null) { %>
    <p>Listing a total of <strong><%= faq.length %></strong> FAQs</p>
    <% } %>

    <div class="table-responsive-sm">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Question</th>
                    <th scope="col">Answer</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                <% faq.forEach(qna => { %>
                <tr>
                    <th scope="row"><a href="/brainstvadmins/faqs/<%= qna.id %>/edit" class="text-success"
                            title="Edit Faqs"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </th>
                    <td><%= qna.question %></td>
                    <td><%= qna.answer %></td>
                    <td>
                        <!-- this is ejs rendering of delete form button in partials folder -->
                        <%- include('../../partials/deleteForm', { url: `/brainstvadmins/faqs/${qna.id}` }) %>
                    </td>
                </tr>
                <% }) %>

            </tbody>
        </table>
    </div>

</div>