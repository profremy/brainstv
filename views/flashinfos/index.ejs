<div class="jumbotron container-fluid">
    <a href="/brainstvadmins" class="btn btn-info marginTopBottomSmall"><i class="fa fa-arrow-circle-left"
            aria-hidden="true"></i><span>Back</span></a>
    <h4>Flash Information</h4>
    <a href="/flashinfos/new" class="btn btn-success">Create/Add New</a>
    <hr class="my-1 document-divider" />
    <nav class="navbar navbar-light bg-info">
        <a class="navbar-brand">Search Flash Info</a>
        <form action="/flashinfos" method="GET" class="form-inline my-2 my-lg-0 searchForm">
            <input type="search" class="form-control mr-sm-2" name="flashInfoText"
                value="<%= searchOptions.flashInfoText %>" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 searchBtn" type="submit" id="loader">Search</button>
        </form>
    </nav>
    <hr class="my-1" />
    <P>Listing a total of <strong><%= flashinfo.length %></strong> flash message(s)</P>
    <div class="table-responsive-sm">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">#</th>
                    <th scope="col">Flash Information</th>
                    <th scope="col">#</span></th>
                </tr>
            </thead>
            <tbody>
                <% flashinfo.forEach(info => { %>
                <tr>
                    <th scope="row"><a href="/flashinfos/<%= info.id %>" class="text-info" title="Show Flash Info"><i
                                class="fa fa-eye" aria-hidden="true"></i></a>
                    </th>
                    <th scope="row"><a href="/flashinfos/<%= info.id %>/edit" class="text-success"
                            title="Edit Flash info"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </th>
                    <td><%= info.flashInfoText %></td>
                    <td>
                        <!-- this is ejs rendering of delete form button in partials folder -->
                        <%- include('../partials/deleteForm', { url: `/flashinfos/${info.id}` }) %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>