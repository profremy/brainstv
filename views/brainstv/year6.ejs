<div class="jumbotron container-fluid" style="background-color: rgb(214, 231, 138);">
    <div class="input-group margin-bottom-sm">
        <span class="input-group-addon bg-light p-1"><i class="fa fa-home shows" aria-hidden="true"></i></span>
        <span class="dark-blue-gradient-background p-1">E-Classroom</span>
    </div>


    <hr class="my-1 document-divider">
    <h1 class="text-center mt-3">Year 6 E-Classroom</h1>

    <div class="d-flex flex-fill flex-wrap _justify-content-center bd-highlight">
        <div class="p-2 vw-100 bd-highlight mobileScreen boxShadowGridPhotos mb-3">
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="responsive-iframe" width="560" height="315"
                    src="https://www.youtube-nocookie.com/embed/<%#= livestream.livestreamURL %>?rel=0&modestbranding=1"
                    frameborder="0"
                    allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
        </div>

        <div class="p-2 my-w-75 bd-highlight desktopScreen boxShadowGridPhotos mr-2 mb-3">
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="responsive-iframe" width="560" height="315"
                    src="https://www.youtube-nocookie.com/embed/<%= livestream.livestreamURL %>?rel=0&modestbranding=1"
                    frameborder="0"
                    allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
        </div>
        <div
            class="d-flex flex-fill flex-shrink-1 justify-content-around align-content-center flex-column bd-highlight">

            <div class="mb-2 pt-2 pb-2">
                <p class="mb-0 font-weight-bold text-center">Do you have a question on this subject? Type it below.</p>
            </div>
            <!-- <div class="text-center mb-3 pt-2 pb-2"> -->
            <form action="/" method="POST" id="askQuestionForm">
                <div class="form-group">
                    <input type="text" class="form-control" name="fullname" placeholder="Enter your full name here"
                        required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Enter your email here" required>
                </div>

                <div class="form-group align-items-center">
                    <textarea name="askQuestion" class="form-control" rows="3" placeholder="Enter your question here"
                        required></textarea>
                </div>

                <% if(user) { %>
                <div class="form-group text-center marginTopBottomSmall">
                    <button type="submit" class="btn btn-light" id="loader"><i class="fa fa-envelope"
                            aria-hidden="true"></i>Send</button>
                    <div class="col-sm-3 mb-2">
                    </div>
                </div>
                <% } else { %>
                <p class="mb-0 font-weight-bold text-center">You must <a href="\clubmembers\joinbrainsclub">Sign in</a>
                    to send a question.</p>

                <% } %>

            </form>
            <!-- </div> -->

        </div>
    </div>


    <h2 class="text-center mt-3">Previous Classes</h2>
    <div class="main-flex">

        <% allShows.forEach(show => { %>
        <% if(show.showType === 'Video' && show.className.className === 'Year 6 E-Classroom') { %>
        <div class="col-sm-3 flex-item">
            <div class="embed-responsive _embed-responsive-16by9 transform-scale">
                <a href="/brainstv/show/<%= show.slug %>">
                    <div class="noBorderResourcesOverlay"></div>
                </a>
                <!-- <div class="learningResourcesTopTitle"><%= show.showStatus %> </div> -->

                <img src="/images/show_images/<%= show.showThumbnail %>" width="315" height="200" class="_img-fluid"
                    alt="<%= show.showTitle %>">
                <div class="noBorderLearningResourcesBottomTitle"><%= show.showTitle %></div>
            </div>
        </div>
        <% } %>
        <% }) %>

    </div>


    <div class="section__recent__takePart _mt-3 p-3" style="background-color: #355394;">
        <h3 class="text-center text-light">Trending Now: Take Part Before time is up</h3>
        <div class="auto-grid-front-page-shows">
            <% fourRecentTakePart.forEach(recentTakePart => { %>
            <div class="autoGridPhotos transform-scale">
                <a href="/brainstv/show/<%= recentTakePart.slug %>">
                    <div class="noBorderResourcesOverlay"></div>
                </a>
                <!-- <div class="learningResourcesTopTitle"><%#= recentTakePart.showStatus %> </div> -->

                <img src="/images/show_images/<%= recentTakePart.showThumbnail %>" width="100%" height="200"
                    class="img-fluid" alt="<%= recentTakePart.showTitle %>">

                <div class="noBorderLearningResourcesBottomTitle"><%= recentTakePart.showTitle %> </div>
            </div>
            <% }) %>
        </div>
        <div class="text-center">
            <a href="/brainstv/takepart" class="btn btn-outline-light mt-3">All TakePart</a>
        </div>
    </div>

</div>