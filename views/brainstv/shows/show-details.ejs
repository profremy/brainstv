                            <button type="button" class="btn btn-outline-danger cancelOp"><i
                                    class="fa fa-times-circle-o" aria-hidden="true"></i><span>Close</span></button>
                        </div>

                    </div>
                </form>
            </div>
            <% } else if (show.takePartType === 'Discussion') { %>

            <button type="button" class="btn btn-outline-info mb-3 openDiscussionPanel hideElement"><i
                    class="fa fa-comments-o" aria-hidden="true"></i>Start Discussion</button>
            <!-- This next line holds the discussion for current discussion show -->
            <%- include('../../partials/discussion.ejs') %>

            <% } else if (show.takePartType === 'Poll') { %>
            <button type="button" class="btn btn-outline-primary mb-3 openPollPanel hideElement"><i
                    class="fa fa-bar-chart" aria-hidden="true"></i>Open Poll Panel</button>
            <% if (show.showTitle === 'School day' && user.role === 'clubMember') { %>
            <%- include('../../partials/schoolDayPoll.ejs') %>
            <% } else if(show.showTitle === 'Mum and Dad' && user.role === 'clubMember') { %>
            <%- include('../../partials/mumAndDadPoll.ejs') %>
            <% } else if(show.showTitle === 'When can you stop' && user.role === 'clubMember') { %>
            <%- include('../../partials/whenCanYouStop.ejs') %>
