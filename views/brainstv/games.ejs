<div class="jumbotron container-fluid timber-gradient">
    <div class="input-group margin-bottom-sm">
        <span class="input-group-addon bg-light p-1"><i class="fa fa-gamepad shows" aria-hidden="true"></i></span>
        <span class="dark-blue-gradient-background p-1">All Games</span>
    </div>

    <hr class="my-1 document-divider">
    <ul class="nav nav-pills mb-3 mt-3" id="pills-tab" role="tablist">
        <li class="nav-item mr-auto" role="presentation">
            <a class="nav-link btn btn-outline-light rounded-pill" id="pills-puzzle-tab" data-toggle="pill"
                href="#pills-puzzle" role="tab" aria-controls="pills-puzzle" aria-selected="true">Puzzle</a>
        </li>
        <li class="nav-item mr-auto" role="presentation">
            <a class="nav-link  btn btn-outline-light rounded-pill" id="pills-colouring-tab" data-toggle="pill"
                href="#pills-colouring" role="tab" aria-controls="pills-colouring" aria-selected="false">Colouring</a>
        </li>
        <li class="nav-item mr-auto" role="presentation">
            <a class="nav-link btn btn-outline-light rounded-pill" id="pills-quizz-tab" data-toggle="pill"
                href="#pills-quizz" role="tab" aria-controls="pills-quizz" aria-selected="false">Quizz</a>
        </li>
        <li class="nav-item mr-auto" role="presentation">
            <a class="nav-link btn btn-outline-light rounded-pill" id="pills-others-tab" data-toggle="pill"
                href="#pills-others" role="tab" aria-controls="pills-others" aria-selected="false">Others</a>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-puzzle" role="tabpanel" aria-labelledby="pills-puzzle-tab">
            <div class="main-flex">

                <% allShows.forEach(show => { %>
                <% if(show.showType === "Game" && show.takePartType === "Puzzle") { %>
                <div class="col-sm-3 flex-item">
                    <div class="embed-responsive _embed-responsive-16by9 transform-scale">
                        <a href="/brainstv/show/<%= show.slug %>">
                            <div class="resourcesOverlay"></div>
                        </a>
                        <div class="learningResourcesTopTitle"><%= show.showStatus %> </div>
                        <img src="/images/show_images/<%= show.showThumbnail %>" width="315" height="200"
                            class="_img-fluid" alt="<%= show.showTitle %>">
                        <div class="learningResourcesBottomTitle"><%= show.showTitle %> </div>
                    </div>
                </div>
                <% } %>
                <% }) %>

            </div>
        </div>
        <div class="tab-pane fade" id="pills-colouring" role="tabpanel" aria-labelledby="pills-colouring-tab">
            <div class="main-flex">

                <% allShows.forEach(show => { %>
                <% if(show.showType === "Game" && show.takePartType === "Colouring") { %>
                <div class="col-sm-3 flex-item">
                    <div class="embed-responsive _embed-responsive-16by9 transform-scale">
                        <a href="/brainstv/show/<%= show.slug %>">
                            <div class="resourcesOverlay"></div>
                        </a>
                        <div class="learningResourcesTopTitle"><%= show.showStatus %> </div>
                        <img src="/images/show_images/<%= show.showThumbnail %>" width="315" height="200"
                            class="_img-fluid" alt="<%= show.showTitle %>">
                        <div class="learningResourcesBottomTitle"><%= show.showTitle %> </div>
                    </div>
                </div>
                <% } %>
                <% }) %>

            </div>
        </div>
        <div class="tab-pane fade" id="pills-quizz" role="tabpanel" aria-labelledby="pills-quizz-tab">
            <div class="main-flex">

                <% allShows.forEach(show => { %>
                <% if(show.showType === "Game" && show.takePartType === "Quizz") { %>
                <div class="col-sm-3 flex-item">
                    <div class="embed-responsive _embed-responsive-16by9 transform-scale">
                        <a href="/brainstv/show/<%= show.slug %>">
                            <div class="resourcesOverlay"></div>
                        </a>
                        <div class="learningResourcesTopTitle"><%= show.showStatus %> </div>
                        <img src="/images/show_images/<%= show.showThumbnail %>" width="315" height="200"
                            class="_img-fluid" alt="<%= show.showTitle %>">
                        <div class="learningResourcesBottomTitle"><%= show.showTitle %> </div>
                    </div>
                </div>
                <% } %>
                <% }) %>

            </div>
        </div>
        <div class="tab-pane fade" id="pills-others" role="tabpanel" aria-labelledby="pills-others-tab">
            <div class="main-flex">

                <% allShows.forEach(show => { %>
                <% if(show.showType === "Game" && show.takePartType === "Others") { %>
                <div class="col-sm-3 flex-item">
                    <div class="embed-responsive _embed-responsive-16by9 transform-scale">
                        <a href="/brainstv/show/<%= show.slug %>">
                            <div class="resourcesOverlay"></div>
                        </a>
                        <div class="learningResourcesTopTitle"><%= show.showStatus %> </div>
                        <img src="/images/show_images/<%= show.showThumbnail %>" width="315" height="200"
                            class="_img-fluid" alt="<%= show.showTitle %>">
                        <div class="learningResourcesBottomTitle"><%= show.showTitle %> </div>
                    </div>
                </div>
                <% } %>
                <% }) %>

            </div>
        </div>
    </div>

    <div class="section__recent__takePart _mt-3 p-3" style="background-color: #355394;">
        <h3 class="text-center text-light">Trending Now: Take Part Before time is up</h3>
        <div class="auto-grid-front-page-shows">
            <% fourRecentTakePart.forEach(recentTakePart => { %>
            <div class="autoGridPhotos transform-scale">
                <a href="/brainstv/show/<%= recentTakePart.slug %>">
                    <div class="noBorderResourcesOverlay"></div>
                </a>
                <!-- <div class="learningResourcesTopTitle"><%#= recentTakePart.showStatus %> </div> -->

                <img src="/images/show_images/<%= recentTakePart.showThumbnail %>" width="100%" height="200"
                    class="img-fluid" alt="<%= recentTakePart.showTitle %>">

                <div class="noBorderLearningResourcesBottomTitle"><%= recentTakePart.showTitle %> </div>
            </div>
            <% }) %>
        </div>
        <div class="text-center">
            <a href="/brainstv/takepart" class="btn btn-outline-light mt-3">All TakePart</a>
        </div>
    </div>
</div>