<div class="jumbotron container-fluid">
    <div class="form-group row">
        <div class="col-sm-10">
            <a href="/brainstvadmins" class="btn btn-info"><i class="fa fa-arrow-circle-left"
                    aria-hidden="true"></i><span>Back</span></a>
        </div>
    </div>
    <nav class="navbar navbar-light bg-info">
        <a class="navbar-brand">Popups</a>
    </nav>
    <hr class="my-3 document-divider">
    <!-- <P>Listing a total of <strong><%#= popup.length %></strong> popup(s)</P> -->
    <div class="table-responsive-sm">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Subtitle</th>
                    <th scope="col">Footer</th>
                    <th scope="col">#</span></th>
                </tr>
            </thead>
            <tbody>
                <%# popup.forEach(popup => { %>
                <% if(popups !== null) { %>
                <tr>
                    <th scope="row"><a href="/popups/<%= popups.id %>" class="text-info" title="Show Popup"><i
                                class="fa fa-eye" aria-hidden="true"></i></a>
                    </th>
                    <th scope="row"><a href="/popups/<%= popups.id %>/edit" class="text-success" title="Edit Popup"><i
                                class="fa fa-pencil" aria-hidden="true"></i></a>
                    </th>
                    <td><%= popups.title %></td>
                    <td><%= popups.subtitle %></td>
                    <td><%= popups.footer %></td>
                    <td>
                        <!-- this is ejs rendering of delete form button in partials folder -->
                        <%- include('../partials/deleteForm', { url: `/popups/${popups.id}` }) %>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</div>